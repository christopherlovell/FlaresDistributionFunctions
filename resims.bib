@article{hou_evolution_2017,
	title = {Evolution of dust extinction curves in galaxy simulation},
	url = {http://arxiv.org/abs/1704.01769},
	abstract = {To understand the evolution of extinction curve, we calculate the dust evolution in a galaxy using smoothed particle hydrodynamics simulations incorporating stellar dust production, dust destruction in supernova shocks, grain growth by accretion and coagulation, and grain disruption by shattering. The dust species are separated into carbonaceous dust and silicate. The evolution of grain size distribution is considered by dividing grain population into large and small gains, which allows us to estimate extinction curves. We examine the dependence of extinction curves on the position, gas density, and metallicity in the galaxy, and find that extinction curves are flat at \$t {\textbackslash}lesssim 0.3\$ Gyr because stellar dust production dominates the total dust abundance. The 2175 {\textbackslash}AA{\textbackslash} bump and far-ultraviolet (FUV) rise become prominent after dust growth by accretion. At \$t {\textbackslash}gtrsim 3\$ Gyr, shattering works efficiently in the outer disc and low density regions, so extinction curves show a very strong 2175 {\textbackslash}AA{\textbackslash} bump and steep FUV rise. The extinction curves at \$t{\textbackslash}gtrsim 3\$ Gyr are consistent with the Milky Way extinction curve, which implies that we successfully included the necessary dust processes in the model. The outer disc component caused by stellar feedback has an extinction curves with a weaker 2175 {\textbackslash}AA{\textbackslash} bump and flatter FUV slope. The strong contribution of carbonaceous dust tends to underproduce the FUV rise in the Small Magellanic Cloud extinction curve, which supports selective loss of small carbonaceous dust in the galaxy. The snapshot at young ages also explain the extinction curves in high-redshift quasars.},
	urldate = {2017-04-11},
	journal = {arXiv:1704.01769 [astro-ph]},
	author = {Hou, Kuan-Chou and Hirashita, Hiroyuki and Nagamine, Kentaro and Aoyama, Shohei and Shimizu, Ikkoh},
	month = apr,
	year = {2017},
	note = {arXiv: 1704.01769},
	keywords = {Astrophysics - Astrophysics of Galaxies},
	file = {arXiv.org Snapshot:/home/chris/zotero/storage/NW33UAWI/1704.html:text/html;Hou et al_2017_Evolution of dust extinction curves in galaxy simulation.pdf:/home/chris/zotero/storage/SBNVUZAK/Hou et al_2017_Evolution of dust extinction curves in galaxy simulation.pdf:application/pdf}
}

@article{yajima_growth_2017,
	title = {Growth of {First} {Galaxies}: {Impacts} of {Star} {Formation} and {Stellar} {Feedback}},
	shorttitle = {Growth of {First} {Galaxies}},
	url = {http://arxiv.org/abs/1704.03117},
	abstract = {We present the results of cosmological hydrodynamic simulations with zoom-in initial conditions, and investigate the formation of the first galaxies and their evolution towards observable galaxies at \$z {\textbackslash}sim 6\$. We focus on three different galaxies which end up in halos with masses \$M\_\{h\} = 2.4 {\textbackslash}times10{\textasciicircum}\{10\}{\textasciitilde}h{\textasciicircum}\{-1\}{\textbackslash}; M\_\{{\textbackslash}odot\}\$ (Halo-10), \$1.6 {\textbackslash}times10{\textasciicircum}\{11\}{\textasciitilde}h{\textasciicircum}\{-1\}{\textbackslash}; M\_\{{\textbackslash}odot\}\$ (Halo-11) and \$0.7 {\textbackslash}times10{\textasciicircum}\{12\}{\textasciitilde}h{\textasciicircum}\{-1\} M\_\{{\textbackslash}odot\}\$ (Halo-12) at z=6. Our simulations also probe impacts of different sub-grid assumptions, i.e., SF efficiency and cosmic reionization, on SF histories in the first galaxies. We find that star formation occurs intermittently due to supernova (SN) feedback at z {\textgreater} 10, and then it proceeds more smoothly as the halo mass grows at lower redshifts. Galactic disks are destroyed due to SN feedback, while galaxies in simulations with no-feedback or lower SF efficiency models can sustain galactic disk for long periods {\textgreater} 10 Myr. The expulsion of gas at the galactic center also affects the inner dark matter density profile. However, SN feedback does not seem to keep the shallow profile of dark matter for a long period. Our simulated galaxies in Halo-11 and Halo-12 reproduce the star formation rates (SFR) and stellar masses of observed Lyman-\${\textbackslash}alpha\$ emitters (LAEs) at z = 7-8 fairly well given observational uncertainties. In addition, we investigate the effect of UV background radiation on star formation as an external feedback source, and find that earlier reionization extends the quenching time of star formation due to photo-ionization heating, but does not affect the stellar mass at z=6.},
	urldate = {2017-04-18},
	journal = {arXiv:1704.03117 [astro-ph]},
	author = {Yajima, Hidenobu and Nagamine, Kentaro and Zhu, Qirong and Khochfar, Sadegh and Vecchia, Claudio Dalla},
	month = apr,
	year = {2017},
	note = {arXiv: 1704.03117},
	keywords = {Astrophysics - Astrophysics of Galaxies},
	file = {arXiv.org Snapshot:/home/chris/zotero/storage/WZVWU8WZ/1704.html:text/html;Yajima et al_2017_Growth of First Galaxies.pdf:/home/chris/zotero/storage/QAQFV7AZ/Yajima et al_2017_Growth of First Galaxies.pdf:application/pdf}
}

@article{bisigello_recovering_2017,
	title = {Recovering the properties of high redshift galaxies with different {JWST} broad-band filters},
	url = {http://arxiv.org/abs/1706.05063},
	abstract = {Imaging with the James Webb Space Telescope (JWST) will allow for observing the bulk of distant galaxies at the epoch of reionisation. The recovery of their properties, such as age, color excess E(B-V), specific star formation rate (sSFR) and stellar mass, will mostly rely on spectral energy distribution fitting, based on the data provided by JWST's two imager cameras, namely the Near Infrared Camera (NIRCam) and the Mid Infrared Imager (MIRI). In this work we analyze the effect of choosing different combinations of NIRCam and MIRI broad-band filters, from 0.6 \{{\textbackslash}mu\}m to 7.7 \{{\textbackslash}mu\}m, on the recovery of these galaxy properties. We performed our tests on a sample of 1542 simulated galaxies, with known input properties, at z=7-10. We found that, with only 8 NIRCam broad-bands, we can recover the galaxy age within 0.1 Gyr and the color excess within 0.06 mag for 70\% of the galaxies. Besides, the stellar masses and sSFR are recovered within 0.2 and 0.3 dex, respectively, at z=7-9. Instead, at z=10, no NIRCam band traces purely the \{{\textbackslash}lambda\}{\textgreater} 4000 \{{\textbackslash}AA\} regime and the percentage of outliers in stellar mass (sSFR) increases by {\textgreater} 20\% ({\textgreater} 90\%), in comparison to z=9. The MIRI F560W and F770W bands are crucial to improve the stellar mass and the sSFR estimation at z=10. When nebular emission lines are present, deriving correct galaxy properties is challenging, at any redshift and with any band combination. In particular, the stellar mass is systematically overestimated in up to 0.3 dex on average with NIRCam data alone and including MIRI observations improves only marginally the estimation.},
	journal = {arXiv:1706.05063 [astro-ph]},
	author = {Bisigello, L. and Caputi, K. I. and Colina, L. and F{\`e}vre, O. Le and N{\o}rgaard-Nielsen, H. U. and P{\'e}rez-Gonz{\'a}lez, P. G. and van der Werf, P. and Ilbert, O. and Grogin, N. and Koekemoer, A.},
	month = jun,
	year = {2017},
	note = {arXiv: 1706.05063},
	keywords = {Astrophysics - Astrophysics of Galaxies}
}

@article{ma_simulating_2017,
	title = {Simulating galaxies in the reionization era with {FIRE}-2: galaxy scaling relations, stellar mass functions, and luminosity functions},
	shorttitle = {Simulating galaxies in the reionization era with {FIRE}-2},
	url = {http://arxiv.org/abs/1706.06605},
	abstract = {We present a suite of cosmological zoom-in simulations at z{\textgreater}5 from the Feedback In Realistic Environments project, spanning a halo mass range M\_halo{\textasciitilde}10{\textasciicircum}8-10{\textasciicircum}12 M\_sun at z=5. We predict the stellar mass-halo mass relation, stellar mass function, and luminosity function in several bands from z=5-12. The median stellar mass-halo mass relation does not evolve strongly at z=5-12. The faint-end slope of the luminosity function steepens with increasing redshift, as inherited from the halo mass function at these redshifts. Below z{\textasciitilde}6, the stellar mass function and ultraviolet (UV) luminosity function slightly flatten below M\_star{\textasciitilde}10{\textasciicircum}4.5 M\_sun (fainter than M\_1500{\textasciitilde}-14), owing to the fact that star formation in low-mass halos is suppressed by the ionizing background by the end of reionization. Such flattening does not appear at higher redshifts. We provide redshift-dependent fitting functions for the SFR-M\_halo, SFR-M\_star, and broad-band magnitude-stellar mass relations. We derive the star formation rate density and stellar mass density at z=5-12 and show that the contribution from very faint galaxies becomes more important at z{\textgreater}8. Furthermore, we find that the decline in the z{\textasciitilde}6 UV luminosity function brighter than M\_1500{\textasciitilde}-20 is largely due to dust attenuation. Approximately 37\% (54\%) of the UV luminosity from galaxies brighter than M\_1500=-13 (-17) is obscured by dust at z{\textasciitilde}6. Our results broadly agree with current data and can be tested by future observations.},
	journal = {arXiv:1706.06605 [astro-ph]},
	author = {Ma, Xiangcheng and Hopkins, Philip F. and Garrison-Kimmel, Shea and Faucher-Gigu{\`e}re, Claude-Andr{\'e} and Quataert, Eliot and Boylan-Kolchin, Michael and Hayward, Christopher C. and Feldmann, Robert and Kere{\v s}, Du{\v s}an},
	month = jun,
