	volume = {481},
	issn = {0035-8711},
	url = {http://adsabs.harvard.edu/abs/2018MNRAS.481.5630S},
	doi = {10.1093/mnras/sty2618},
	abstract = {This paper is the second in a series presenting the results of our deep 
