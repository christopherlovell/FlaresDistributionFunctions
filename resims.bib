	journal = {MNRAS},
	author = {Rosdahl, Joakim and Katz, Harley and Blaizot, Jeremy and Kimm, Taysun and Michel-Dansac, Leo and Garel, Thibault and Haehnelt, Martin and Ocvirk, Pierre and Teyssier, Romain},
