@article{mas-ribas_small-scale_2017,
	title = {Small-scale {Intensity} {Mapping}: {Extended} {Ly$\alpha$}, {H$\alpha$}, and {Continuum} {Emission} as a {Probe} of {Halo} {Star} {Formation} in {High}-redshift {Galaxies}},
