	journal = {MNRAS},
	author = {Katsianis, A. and Gonzalez, V. and Barrientos, D. and Yang, X. and Lagos, C. D. P. and Schaye, J. and Camps, P. and Tr{\v c}ka, A. and Baes, M. and Stalevski, M. and Blanc, G. A. and Theuns, T.},
