	note = {arXiv: 1704.01135},
	keywords = {Astrophysics - Astrophysics of Galaxies},
	file = {arXiv.org Snapshot:/home/chris/zotero/storage/QSWU6NTZ/1704.html:text/html;Dav{\'e} et al_2017_MUFASA.pdf:/home/chris/zotero/storage/5NVSS9EK/Dav{\'e} et al_2017_MUFASA.pdf:application/pdf}
