	urldate = {2020-03-23},
	journal = {MNRAS},
	author = {Khandai, Nishikanta and Di Matteo, Tiziana and Croft, Rupert and Wilkins, Stephen M. and Feng, Yu and Tucker, Evan and DeGraf, Colin and Liu, Mao-Sheng},
	month = jun,
