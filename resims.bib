@article{schreiber_herschel_2015,
	title = {The {Herschel} view of the dominant mode of galaxy growth from z = 4 to the present day},
	volume = {575},
	copyright = {{\textcopyright} ESO, 2015},
	issn = {0004-6361, 1432-0746},
	url = {https://www.aanda.org/articles/aa/abs/2015/03/aa25017-14/aa25017-14.html},
	doi = {10.1051/0004-6361/201425017},
	abstract = {We present an analysis of the deepest {\textless}i{\textgreater}Herschel {\textless}i/{\textgreater}images in four major extragalactic fields GOODS{\textendash}North, GOODS{\textendash}South, UDS, and COSMOS obtained within the GOODS{\textendash}{\textless}i{\textgreater}Herschel {\textless}i/{\textgreater}and CANDELS{\textendash}{\textless}i{\textgreater}Herschel {\textless}i/{\textgreater}key programs. The star formation picture provided by a total of 10 497 individual far-infrared detections is supplemented by the stacking analysis of a mass complete sample of 62 361 star-forming galaxies from the {\textless}i{\textgreater}Hubble {\textless}i/{\textgreater}Space Telescope (HST) {\textless}i{\textgreater}H{\textless}i/{\textgreater} band-selected catalogs of the CANDELS survey and from two deep ground-based {\textless}i{\textgreater}K{\textless}i/{\textgreater}{\textless}sub{\textgreater}s{\textless}sub/{\textgreater} band-selected catalogs in the GOODS{\textendash}North and the COSMOS-wide field to obtain one of the most accurate and unbiased understanding to date of the stellar mass growth over the cosmic history. We show, for the first time, that stacking also provides a powerful tool to determine the dispersion of a physical correlation and describe our method called {\textquotedblleft}scatter stacking{\textquotedblright}, which may be easily generalized to other experiments. The combination of direct UV and far-infrared UV-reprocessed light provides a complete census on the star formation rates (SFRs), allowing us to demonstrate that galaxies at {\textless}i{\textgreater}z{\textless}i/{\textgreater} = 4 to 0 of all stellar masses ({\textless}i{\textgreater}M{\textless}i/{\textgreater}{\textless}sub{\textgreater}*{\textless}sub/{\textgreater}) follow a universal scaling law, the so-called main sequence of star-forming galaxies. We find a universal close-to-linear slope of the log {\textless}sub{\textgreater}10{\textless}sub/{\textgreater}({\textless}i{\textgreater}SFR{\textless}i/{\textgreater}){\textendash}log {\textless}sub{\textgreater}10{\textless}sub/{\textgreater}({\textless}i{\textgreater}M{\textless}i/{\textgreater}{\textless}sub{\textgreater}*{\textless}sub/{\textgreater}) relation, with evidence for a flattening of the main sequence at high masses (log {\textless}sub{\textgreater}10{\textless}sub/{\textgreater}({\textless}i{\textgreater}M{\textless}i/{\textgreater}{\textless}sub{\textgreater}*{\textless}sub/{\textgreater}/{\textless}i{\textgreater}M{\textless}i/{\textgreater}{\textless}sub{\textgreater}?{\textless}sub/{\textgreater}) {\textgreater} 10.5) that becomesless prominent with increasing redshift and almost vanishes by {\textless}i{\textgreater}z{\textless}i/{\textgreater} ? 2. This flattening may be due to the parallel stellar growth of quiescent bulges in star-forming galaxies, which mostly happens over the same redshift range. Within the main sequence, we measure a nonvarying SFR dispersion of 0.3 dex: at a fixed redshift and stellar mass, about 68\% of star-forming galaxies form stars at a universal rate within a factor 2. The specific SFR (s{\textless}i{\textgreater}SFR{\textless}i/{\textgreater} = {\textless}i{\textgreater}SFR{\textless}i/{\textgreater}/{\textless}i{\textgreater}M{\textless}i/{\textgreater}{\textless}sub{\textgreater}*{\textless}sub/{\textgreater}) of star-forming galaxies is found to continuously increase from {\textless}i{\textgreater}z{\textless}i/{\textgreater} = 0 to 4. Finally we discuss the implications of our findings on the cosmic SFR history and on the origin of present-day stars: more than two-thirds of present-day stars must have formed in a regime dominated by the {\textquotedblleft}main sequence{\textquotedblright} mode. As a consequence we conclude that, although omnipresent in the distant Universe, galaxy mergers had little impact in shaping the global star formation history over the last 12.5 billion years.},
	language = {en},
