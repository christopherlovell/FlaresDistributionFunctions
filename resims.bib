	urldate = {2019-05-28},
	journal = {MNRAS},
	author = {Barnes, David J. and Kay, Scott T. and Bah{\'e}, Yannick M. and Dalla Vecchia, Claudio and McCarthy, Ian G. and Schaye, Joop and Bower, Richard G. and Jenkins, Adrian and Thomas, Peter A. and Schaller, Matthieu and Crain, Robert A. and Theuns, Tom and White, Simon D. M.},
